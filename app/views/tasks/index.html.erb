<h1> My tasks </h1>

<ul>
  <% @tasks.each do |task| %>
  <%= check_box_tag(:completed) %>
  <%= link_to "Delete",
  task_path(task.id),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
    <li><%= link_to task.title, task_path(task) %></li>
  <% end %>
</ul>
<%= link_to "Add a task", tasks_new_path %>
